= stylesheet_link_tag href: "modal"

.container
  %h2 Chorottone

%p
  Upload New Image and Audio.

= form_for(@media, html: {multipart: true}) do |f|
  .form-data
    = f.label :image
    = f.file_field :image
  %p
    Available types: jpg, png, gif
  %br

  .form-data
    = f.label :audio
    = f.file_field :audio
  %p
    Available types: wma aac mp3 wav m4a
  %br

  .form-data
    = f.label :author
    = f.text_field :author
  %br
  %br
  .actions.col-md-11
    = f.submit

.container
  = link_to "back to top", medias_path
